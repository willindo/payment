generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id          String        @id @default(uuid())
  userId      String
  orderId     String?
  amount      Float
  currency    String        @default("INR")
  status      PaymentStatus @default(PENDING)
  provider    String
  providerRef String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
